@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}



<!-- hero area -->
<div class="hero-area hero-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 offset-lg-2 text-center">
                <div class="hero-text">
                    <div class="hero-text-tablecell">
                        <p class="subtitle">Delicious Seasonal Fruits</p>
                        <h1>Fresh & Organic</h1>

                        <div class="hero-btns">
                            <a asp-page="shop" class="boxed-btn">Fruit Collection</a>
                            <a asp-page="contactFruitkha" class="bordered-btn">Contact Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end hero area -->

<!-- features list section -->
<div class="list-section pt-80 pb-80">
    <div class="container">

        <div class="row">

            @if (Model.indexList.Count() > 0)
            {
                foreach (var itm in Model.indexList)
                {
                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                        <div class="list-box d-flex align-items-center">
                            <div class="list-icon">
                                <i class="@itm.Logo"></i>
                            </div>
                            <div class="content">
                                <h3>@itm.SubTitle</h3>
                                <p>@itm.Details</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

    </div>
</div>
<!-- end features list section -->


<!-- product section -->
<div class="product-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Our </span>@Model.titleobj.ProductMainTitle</h3>
                    <p>@Model.titleobj.ProductDetails</p>
                </div>
            </div>
        </div>

        <div class="row">


            @if (Model.Productlist.Count() > 0)
            {
                foreach (var itm in Model.Productlist)
                {
                    <div class="col-lg-4 col-md-6 text-center">

                        <div class="single-product-item">
                            <div class="product-image">
                                <a asp-page="singleProduct"><img src="/Images/@itm.Image" alt=""></a>
                            </div>
                            <h3>@itm.ProdecuName</h3>
                            <p class="product-price"><span>@itm.ProductDetails</span> @itm.ProductPrice </p>
                            <a asp-page="cart" class="cart-btn"><i class="fas fa-shopping-cart"></i> @itm.ProductCart</a>
                        </div>
                    </div>

                }
            }


        </div>
    </div>
</div>
<!-- end product section -->



<!-- cart banner section -->
<section class="cart-banner pt-100 pb-100">
    <div class="container">
        <div class="row clearfix">
            <!--Image Column-->
            <div class="image-column col-lg-6">
                <div class="image">
                    <div class="price-box">
                        <div class="inner-price">
                            <span class="price">
                                <strong>@Model.dealobj.Percentage</strong> <br> off per kg
                            </span>
                        </div>
                    </div>
                    <img src="~/fruitkha/assets/img/a.jpg" alt="">
                </div>
            </div>
            <!--Content Column-->
            <div class="content-column col-lg-6">

                <h3 class = "orange-text" >@Model.dealobj.Title</h3>

                <h4>@Model.dealobj.Subtitle</h4>
                <div class="text">@Model.dealobj.Details</div>
                
                <a asp-page="cart" class="cart-btn mt-3"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
            </div>
        </div>
    </div>
</section>
<!-- end cart banner section -->


<!-- testimonail-section -->
<div class="testimonail-section mt-150 mb-150">
    <div class="container">
        <div class="row">


            <div class="col-lg-10 offset-lg-1 text-center">

                <div class="testimonial-sliders">

            @if (Model.teanlist.Count() > 0)
            {
                foreach (var itm in Model.teanlist)
                {
                    <div class="single-testimonial-slider">

                        <div class="client-avater">
                            <img src="~/Images/@itm.SlidShowLogo" alt="">
                        </div>

                        <div class="client-meta">

                            <h3>@itm.SlidshowWithName <span>@itm.ShopOwnerSlidshow</span></h3>
                            <p class="testimonial-body">
                                " Sed ut perspiciatis unde omnis iste natus error veritatis et  quasi
                                architecto beatae vitae dict eaque ipsa quae ab illo inventore Sed ut perspiciatis
                                unde omnis iste natus error sit voluptatem accusantium "
                            </p>

                            <div class="last-icon">
                                <i class="fas fa-quote-right"></i>
                            </div>

                        </div>
                    </div>
                }
            }


                </div>
            </div>

        </div>
    </div>
</div>
<!-- end testimonail-section -->


<!-- advertisement section -->
<div class="abt-section mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="abt-bg">
                    <a href="https://www.youtube.com/watch?v=RVIvWuZ-TUk&ab_channel=USAGov" class="video-play-btn popup-youtube"><i class="fas fa-play"></i></a>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="abt-text">
                    <p class="top-sub">Since Year @Model.fruiobj.Year</p>
                    <h2>We are <span class="orange-text">@Model.fruiobj.Title</span></h2>
                    <p>@Model.fruiobj.Details</p>
                    <a asp-page="aboutFruitkha" class="boxed-btn mt-4">know more</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end advertisement section -->
<!-- shop banner -->
<section class="shop-banner" style="background-image: url(/Images/@Model.bannerobj.Image);">

    <div class="container">
        <h3>@Model.bannerobj.MainTitle <br> with big <span class="orange-text">Discount!!!</span></h3>
        <div class="sale-percent"><span>Sale! <br> Upto</span>@Model.bannerobj.SubTitleDiscount <span>@Model.bannerobj.SubTitleValue</span></div>
        <a href="@Model.bannerobj.Url" target="_blank" class="cart-btn btn-lg">Shop Now</a>
    </div>
</section>
<!-- end shop banner -->

<!-- latest news -->
<div class="latest-news pt-150 pb-150">
    <div class="container">

        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text"> Our </span>@Model.newsobj.Title</h3>
                    <p>@Model.newsobj.Details</p>
                </div>
            </div>
        </div>

        <div class="row">

            @if(Model.generalNewsDatalist.Count()>0)
            {
                foreach(var itm in Model.generalNewsDatalist)
                {
            <div class="col-lg-4 col-md-6">
                <div class="single-latest-news">
                    <a asp-page="news"><div class="@itm.Logo"></div></a>
                    <div class="news-text-box">
                        <h3><a asp-page="news">@itm.HealLine</a></h3>
                        <p class="blog-meta">
                            <span class="author"><i class="fas fa-user"></i>@itm.Author</span>
                            <span class="date"><i class="fas fa-calendar"></i>@itm.Date</span>
                        </p>
                        <p class="excerpt">@itm.Details</p>
                        <a asp-page="news" class="read-more-btn">read more <i class="fas fa-angle-right"></i></a>
                    </div>
                </div>
            </div>

            }}

        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <a asp-page="news" class="boxed-btn">More News</a>
            </div>
        </div>
    </div>
</div>
<!-- end latest news -->
