@page
@model Demo.Pages.Admin.stateModel
@{
}


<div class="content-wrapper"> 
    <section class="content-header">
        <div class="container-fluid"> 
            <!-- 1st container fluid start-->
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>States</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="index">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div><!-- / 1st container-fluid ends-->
    </section>






    <div class="container-fluid"> 
        <div class="row">
            <!-- left column -->
            <div class="col-md-12"> 
                <!-- Countrise validation -->
                <div class="card card-primary card-outline card-info">


                 
                        <h5 class="ml-3">State Form</h5>
                  



                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post">



                        <input type="hidden" asp-for="StateModel.Id" />
                     

                        <input type="hidden" asp-for="StateModel.CountryId" />
                       




                        <div class="card-body ">
                        <div class="row">

                        
                            

                                <div class="col-lg-4">
                                    <label>Select Country</label>
                                    <select class="form-control select2" asp-items="Model.SelectOptions" asp-for="SelectedId" required></select>
                                </div>
                     


                                <div class="col-lg-4">


                             
                                <label class="ml-2">State Short Name</label>
                                <input type="text" asp-for="StateModel.ShortName" class="form-control" placeholder="Short Name" required>
                            </div>



                            <div class="col-lg-4">
                                <label class="ml-2">State Full Name </label>
                                <input type="text" asp-for="StateModel.FullName" class="form-control" placeholder="Full Name" required>
                            </div>
                          
                       
                   
                       
                        </div>

                         



                            <!-- /.card-body -->
                            <div class="text-center mt-3">

                            @if (Model.StateModel.Id != 0)
                            {
                            <button type="submit" class="btn btn-info">UPDATE</button>
                            }
                            else
                            {
                            <button type="submit" class="btn btn-info">SUBMIT</button>

                            }
                            </div>

                        </div>

                    </form>


                </div>




                    <form method="post">

                        <div class="card-body card card-outline card-success pl-1">
                            <div class="card-header">

                                <h3 class="mr-2">States Datalist</h3>
                            </div>
                          
                            <table id="example1" class="table table-bordered table-striped">
                            <!--For drop menu-->
                                <thead>
                                    <tr>
                                        <th scope="col"> State Id</th>
                                        <th scope="col">Country </th>
                                        <th scope="col"> State Short Name</th>
                                        <th scope="col"> State Name</th>
                                        <th scope="col">Action</th>
                                         
                                    </tr>
                                </thead>

                                <tbody>

                                @if (Model.datalistmodel.Count() > 0)
                                    {
                                    foreach (var item in Model.datalistmodel)
                                        {
                                            <tr>
                                                <td>@item.id</td>
                                                <td>@item.countryname</td>
                                                <td>@item.shortname</td>
                                                <td>@item.fullname</td>

                                                <td class="mr-5">
                                                    <a asp-page="state" asp-route-id="@item.id" class="btn btn-success">EDIT</a>


                                                    <button asp-page-handler="Delete" asp-route-id="@item.id"
                                                    onclick="return confirm('Are you sure you want to DELETE?')" class="btn btn-danger">
                                                        DELETE
                                                    </button>

                                                </td>


                                            </tr>
                                        }
                                    }



                                    else
                                    {

                                        <tr>No data found</tr>

                                    }


                                </tbody>


                            </table>

                        </div>

                    </form>









          
            </div>
        </div>
    </div>




</div>


@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @{
        if (TempData["success"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["success"]');
            </script>
        }

        if (TempData["error"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["error"]');
            </script>
        }
        if (TempData["info"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["info"]');
            </script>
        }
    }

}