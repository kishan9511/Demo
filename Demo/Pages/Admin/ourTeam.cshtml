@page
@model Demo.Pages.Admin.ourTeamModel
@{
}




<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid"> 
            <!-- 1st container fluid start-->
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Our Team </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="index">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>



    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">Our Team</h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ourTeam.Id" />

                        <div class="card-body ">
                            <div class="row">




                                <div class="col-lg-6">
                                    <label class="ml-2"> Team Title </label>
                                    <input type="text" asp-for="ourTeam.TeamTitle" class="form-control" placeholder="Team Title">
                                </div>


                                <div class="col-lg-6">
                                    <label class="ml-2"> Tean Details </label>
                                    <input type="text" asp-for="ourTeam.TeanDetails" class="form-control" placeholder="Tean Details">
                                </div>



                                <div class="col-lg-6">
                                    <label class="ml-2"> Shop Owner Slidshow </label>
                                    <input type="text" asp-for="ourTeam.ShopOwnerSlidshow" class="form-control" placeholder="Shop Owner Slidshow">
                                </div>



                                <div class="col-lg-6">
                                    <label class="ml-2"> Team Mamber Name </label>
                                    <input type="text" asp-for="ourTeam.TeamMamberName" class="form-control" placeholder="Team Mamber Name">
                                </div>


                                <div class="col-lg-6">
                                    <label class="ml-2"> Team Mamber Profile</label>
                                    <input type="text" asp-for="ourTeam.TeamMamberProfile" class="form-control" placeholder="Team Mamber Profile">
                                </div>


                                <div class="col-lg-6">
                                    <label class="ml-2"> Slidshow With Name</label>
                                    <input type="text" asp-for="ourTeam.SlidshowWithName" class="form-control" placeholder="Slidshow With Name">
                                </div>

                               


                                <div class="col-lg-6">
                                    <label class="ml-2"> SlidShow image </label>

                                    <input type="file" asp-for="Imagee"  class="form-control" placeholder=" SlidShow image">

                                </div>

                                <div class="col-lg-6">
                                    <label class="ml-2"> Team Member Logo </label>
                                    
                                    <input type="text" asp-for="ourTeam.TeamMemberLogo"  class="form-control" placeholder="Team Member Logo" >

                                </div>
                            </div>


                            <!-- /.card-body -->
                            <div class="text-center mt-3">

                                @if (Model.ourTeam.Id != 0)
                                {
                                    <button type="submit" class="btn btn-info">UPDATE</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-info">SUBMIT</button>

                                }
                            </div>

                        </div>
                    </form>
                </div>
                <form method="post">

                    <div class="card-body card card-outline card-success pl-1">
                        <div class="card-header">

                            <h3 class="mr-2"> Datalist</h3>
                        </div>

                        <table id="example1" class="table table-bordered table-striped">
                            <!--For drop menu-->
                            <thead>
                                <tr>
                                    <th scope="col">Team Title</th>
                                    <th scope="col">Tean Details</th>
                                    <th scope="col">Shop Owner Slidshow </th>
                                    <th scope="col">SlidShow image </th>
                                    <th scope="col">Team Member Logo </th>
                                    <th scope="col">Slidshow With Name</th>
                                    <th scope="col">Team Mamber Profile</th>
                                    <th scope="col">Team Mamber Name</th>
                                    <th scope="col">Action</th>

                                </tr>
                            </thead>

                            <tbody>

                                @if (Model.ourTeamDataList.Count() > 0)
                                {
                                    foreach (var item in Model.ourTeamDataList)
                                    {
                                        <tr>

                                            <td>@item.TeamTitle</td>
                                            <td>@item.TeanDetails</td>
                                            <td>@item.ShopOwnerSlidshow</td>
                                            <td>
                                                <img src="~/Images/@item.SlidShowLogo" style="height:50px;width:50px" alt="profile image">
                                            </td>
                                            <td>@item.TeamMemberLogo</td>
                                            <td>@item.SlidshowWithName</td>
                                            <td>@item.TeamMamberProfile</td>
                                            <td>@item.TeamMamberName</td>


                                            <td class="mr-5">
                                                <a asp-page="ourTeam" asp-route-id="@item.Id" class="btn btn-success">EDIT</a>


                                                <button asp-page-handler="Delete" asp-route-id="@item.Id"
                                                onclick="return confirm('Are you sure you want to DELETE?')" class="btn btn-danger">
                                                    DELETE
                                                </button>

                                            </td>
                                        </tr>
                                    }
                                }

                                else
                                {

                                    <tr>No data found</tr>

                                }

                            </tbody>

                        </table>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>





@section Scripts{


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @{
        if (TempData["success"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["success"]');
            </script>
        }

        if (TempData["error"] != null)
        {
            <script type="text/javascript">
                toastr.error('@TempData["error"]');
            </script>
        }
        if (TempData["info"] != null)
        {
            <script type="text/javascript">
                toastr.info('@TempData["info"]');
            </script>
        }
    }

}





