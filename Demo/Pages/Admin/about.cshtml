@page
@model Demo.Pages.Admin.aboutModel
@{
}



<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <!-- 1st container fluid start-->
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>About </h1>
                </div>
                <div class="col-sm-6"> 
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="index">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>



    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">About </h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="about.Id" />

                        <div class="card-body ">
                            <div class="row">

                                <div class="col-lg-6">
                                    <label class="ml-2"> Shop Address </label>
                                    <input type="text" asp-for="about.ShopAddress" class="form-control" placeholder="Shop Address" required>
                                </div>
                                <div class="col-lg-6">
                                    <label class="ml-2"> WeekdayHr </label>
                                    <input type="text" asp-for="about.WeekdayHr" class="form-control" placeholder="WeekdayHr" required>
                                </div>
                                <div class="col-lg-6">
                                    <label class="ml-2"> WeekendHr </label>
                                    <input type="text" asp-for="about.WeekendHr" class="form-control" placeholder="WeekendHr" required>
                                </div>

                                <div class="col-lg-6">
                                    <label class="ml-2"> Mobile </label>
                                    <input type="text" asp-for="about.Mobile" class="form-control" maxlength="10" placeholder="Mobile" required>
                                </div>

                                <div class="col-lg-6">
                                    <label class="ml-2"> Phone </label>
                                    <input type="text" asp-for="about.Phone" class="form-control" placeholder="Phone" required>
                                </div>


                                <div class="col-lg-6">
                                    <label class="ml-2"> Email </label>
                                    <input type="text" asp-for="about.Email" class="form-control" placeholder="Email" required>
                                </div>

                                <div class="col-lg-6">
                                    <label class="ml-2"> Fax </label>
                                    <input type="text" asp-for="about.Fax" class="form-control" placeholder="Fax" required>
                                </div>

                                  <div class="col-lg-6">
                                    <label class="ml-2"> AboutTitle </label>
                                    <input type="text" asp-for="about.AboutTitle" class="form-control" placeholder="AboutTitle" required>
                                </div>
                             
                                  <div class="col-lg-6">
                                    <label class="ml-2"> ServiceTitle </label>
                                    <input type="text" asp-for="about.ServiceTitle" class="form-control" placeholder="ServiceTitle" required>
                                </div>
                             
                                  <div class="col-lg-6">
                                    <label class="ml-2"> ServiceImage </label>
                                    <input type="file" asp-for="Imagee" class="form-control">
                                </div>
                             

                            </div>
                         

                            <!-- /.card-body -->
                            <div class="text-center mt-3">

                                @if (Model.about.Id != 0)
                                {
                                    <button type="submit" class="btn btn-info">UPDATE</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-info">SUBMIT</button>

                                }
                            </div>

                        </div>
                    </form>
                </div>
                <form method="post">

                    <div class="card-body card card-outline card-success pl-1">
                        <div class="card-header">

                            <h3 class="mr-2">Datalist</h3>
                        </div>

                        <table id="example1" class="table table-bordered table-striped">
                            <!--For drop menu-->
                            <thead>
                                <tr>
                                    <th scope="col"> Shop Address</th>
                                    <th scope="col"> WeekdayHr</th>
                                    <th scope="col">WeekendHr</th>
                                    <th scope="col">Mobile</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Fax</th>
                                    <th scope="col">ServiceTitle</th>
                                    <th scope="col">ServiceImage</th>
                                    <th scope="col">Action</th>

                                </tr>
                            </thead>

                            <tbody>

                                @if (Model.aboutDatalist.Count() > 0)
                                {
                                    foreach (var item in Model.aboutDatalist)
                                    {
                                        <tr>

                                            <td>@item.ShopAddress</td>
                                            <td>@item.WeekdayHr</td>
                                            <td>@item.WeekendHr</td>
                                            <td>@item.Mobile</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Email</td>
                                            <td>@item.Fax</td>
                                            <td>@item.ServiceTitle</td>
                                             <td>
                                                <img src="~/Images/@item.ServiceImage" style="height:50px;width:50px" alt="profile image">
                                            </td>
                                           

                                            <td class="mr-5">
                                                <a asp-page="about" asp-route-id="@item.Id" class="btn btn-success">EDIT</a>


                                                <button asp-page-handler="Delete" asp-route-id="@item.Id"
                                                onclick="return confirm('Are you sure you want to DELETE?')" class="btn btn-danger">
                                                    DELETE
                                                </button>

                                            </td>
                                        </tr>
                                    }
                                }

                                else
                                {

                                    <tr>No data found</tr>

                                }

                            </tbody>

                        </table>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>



@section Scripts{


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @{
        if (TempData["success"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["success"]');
            </script>
        }

        if (TempData["error"] != null)
        {
            <script type="text/javascript">
                toastr.error('@TempData["error"]');
            </script>
        }
        if (TempData["info"] != null)
        {
            <script type="text/javascript">
                toastr.info('@TempData["info"]');
            </script>
        }
    }

}

