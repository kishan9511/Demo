@page
@model Demo.Pages.Admin.aboutBannerModel
@{
}





<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <!-- 1st container fluid start-->
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Banner</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="index">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>



    <div class="container-fluid"> 
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">Banner </h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">

                        <input type="hidden" asp-for="banner.Id" />

                        <div class="card-body ">
                            <div class="row">

                                <div class="col-lg-6">
                                    <label class="ml-2"> MainTitle </label>
                                    <input type="text" asp-for="banner.MainTitle" class="form-control" placeholder="MainTitle" required>
                                </div>

                                <div class="col-lg-6">
                                    <label class="ml-2"> SubTitle </label>
                                    <input type="text" asp-for="banner.SubTitle" class="form-control" placeholder="SubTitle" required>
                                </div>

                                <div class="col-lg-6">
                                    <label class="ml-2"> SubTitleValue </label>
                                    <input type="text" asp-for="banner.SubTitleValue" class="form-control" placeholder="SubTitleValue" required>
                                </div>

                                <div class="col-lg-6">
                                    <label class="ml-2"> SubTitleDiscount </label>
                                    <input type="text" asp-for="banner.SubTitleDiscount" class="form-control" placeholder="SubTitleDiscount" required>
                                </div>
                                <div class="col-lg-6">
                                    <label class="ml-2"> Url </label>
                                    <input type="url" asp-for="banner.Url" class="form-control" placeholder="Url" >
                                </div>



                                <div class="col-md-6">
                                    <div> <label class="ml-2">Image</label></div>
                               
                                    <input type="file" asp-for="Imagee" class="form-control" />
                                </div>

                            </div>
                            <!-- /.card-body -->
                            <div class="text-center mt-3">

                                @if (Model.banner.Id != 0)
                                {
                                    <button type="submit" class="btn btn-info">UPDATE</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-info">SUBMIT</button>

                                }
                            </div>

                        </div>
                    </form>
                </div>
                <form method="post">

                    <div class="card-body card card-outline card-success pl-1">
                        <div class="card-header">

                            <h3 class="mr-2"> Datalist</h3>
                        </div>
                        <table id="example1" class="table table-bordered table-striped">
                     
                            <thead>
                                <tr>
                                    <th scope="col">MainTitle</th>
                                    <th scope="col">SubTitle</th>
                                    <th scope="col">SubTitleValue</th>
                                    <th scope="col">SubTitleDiscount</th>
                                    <th scope="col">Image </th>
                                    <th scope="col">Action</th>

                                </tr>
                            </thead>

                            <tbody>

                                @if (Model.bannerDatalist.Count() > 0)
                                {
                                    foreach (var item in Model.bannerDatalist)
                                    {
                                        <tr>
                                            <td>@item.MainTitle </td>
                                            <td>@item.SubTitle </td>
                                            <td>@item.SubTitleValue </td>
                                            <td>@item.SubTitleDiscount </td>
                                         

                                            <td>
                                                <img src="~/Images/@item.Image" style="height:50px;width:50px" alt="profile image">
                                            </td>

                                            <td class="mr-5">
                                                <a asp-page="aboutBanner" asp-route-id="@item.Id" class="btn btn-success">EDIT</a>


                                                <button asp-page-handler="Delete" asp-route-id="@item.Id"
                                                onclick="return confirm('Are you sure you want to DELETE?')" class="btn btn-danger">
                                                    DELETE
                                                </button>

                                            </td>
                                        </tr>
                                    }
                                }

                                else
                                {

                                    <tr>No data found</tr>

                                }

                            </tbody>

                        </table>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>




@section Scripts{


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @{
        if (TempData["success"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["success"]');
            </script>
        }

        if (TempData["error"] != null)
        {
            <script type="text/javascript">
                toastr.error('@TempData["error"]');
            </script>
        }
        if (TempData["info"] != null)
        {
            <script type="text/javascript">
                toastr.info('@TempData["info"]');
            </script>
        }
    }

}

