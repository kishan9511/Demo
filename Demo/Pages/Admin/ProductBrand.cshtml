@page
@model Demo.Pages.Admin.ProductBrandModel
@{
}
 


<div class="content-wrapper"> 
    <section class="content-header">
        <div class="container-fluid">
            <!-- 1st container fluid start-->
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Product Brand </h1>
                </div> 
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="index">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>



    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">Product Brand</h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post">

                        <input type="hidden" asp-for="Brand.BrandId" />

                        <div class="card-body ">
                            <div class="row">



                                <div class="col-lg-4">
                                    <label>Select Category</label>
                                    <select class="form-control select2" id="CategoryDropdown" asp-items="Model.selectProCatOptions" asp-for="catID"></select>
                                </div>

                                <div class="col-lg-4">
                                    <label>Select Sub Category</label>
                                    <select class="form-control select2" id="SubCategoryDropdown" asp-items="Model.SelectSubCategoryOption" asp-for="SubCategoryID"></select>
                                </div>

                                <div class="col-lg-4">
                                    <label class="ml-2">  Name </label>
                                    <input type="text"  asp-for="Brand.BrandName" class="form-control" placeholder=" Name" required>
                                </div>
                            </div>

                         

                            <!-- /.card-body -->
                             <div class="text-center mt-3">

                            @if (Model.Brand.BrandId!=0)
                            {
                            <button type="submit" class="btn btn-info">UPDATE</button>
                            }
                            else
                            {
                            <button type="submit" class="btn btn-info">SUBMIT</button>

                            }
                            </div>

                        </div>
                    </form>
                </div>
                <form method="post">

                    <div class="card-body card card-outline card-success pl-1">
                        <div class="card-header">

                            <h3 class="mr-2">Product Brand Datalist</h3>
                        </div>

                        <table id="example1" class="table table-bordered table-striped">
                            <!--For drop menu-->
                            <thead>
                                <tr>
                                    <th scope="col">Category</th>
                                    <th scope="col">Sub-Category</th>
                                    <th scope="col"> Brand Name</th>
                                    <th scope="col">Action</th>

                                </tr>
                            </thead>

                            <tbody>

                                @if (Model.Branddatalist.Count() > 0)
                                {
                                    foreach (var item in Model.Branddatalist)
                                    {
                                        <tr>
                                            <td>@item.CategoryName </td>
                                            <td>@item.subCategoryname </td>
                                            <td>@item.brandname</td>

                                            <td class="mr-5">
                                                <a asp-page="ProductBrand" asp-route-id="@item.brandid" class="btn btn-success">EDIT</a>


                                                <button asp-page-handler="Delete" asp-route-id="@item.brandid"
                                                onclick="return confirm('Are you sure you want to DELETE?')" class="btn btn-danger">
                                                    DELETE
                                                </button>

                                            </td>
                                        </tr>
                                    }
                                }

                                else
                                {

                                    <tr>No data found</tr>

                                }

                            </tbody>

                        </table>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>




@section Scripts{


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @{
        if (TempData["success"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["success"]');
            </script>
        }

        if (TempData["error"] != null)
        {
            <script type="text/javascript">
                toastr.error('@TempData["error"]');
            </script>
        }
        if (TempData["info"] != null)
        {
            <script type="text/javascript">
                toastr.info('@TempData["info"]');
            </script>
        }
    }
    <script src="~/js/Seri.js"></script>
}